/ page content
.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3 Ventas por Dia
    .clearfix
      .row-fluid
        .col-md-12
          = render   'grid'

          .row
            .col-md-2
              ID:
            .col-md-10
              = grid_filter @sales_grid, :sid_filter

          .row
            .col-md-2
              Linea:
            .col-md-3
              = grid_filter @sales_grid, :line_filter
            .col-md-7


          .row
            .col-md-2
              Description:
            .col-md-3
              = grid_filter @sales_grid, :part_filter
            .col-md-7

          .row-fluid
            .col-md-12
              .external-buttons
                %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
                %button.btn.btn-default.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

          .row-fluid
            .col-md-12

              = render_grid(@sales_grid)



