/ page content
.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3
    .clearfix
      -# Render smart listing controls form
      = smart_listing_controls_for(:itemsLine, {class: "form-inline text-right"}) do
        -# Add search box to form - it submits the form automatically on text change
        .form-group.filter.input-append
      %form.form-horizontal
        %fieldset
          / Form Name
          %legend LINEAS MAS VENDIDAS
          = @titulo
          %input{:type=>"hidden", :value=>params[:field], :name=>:field}
          / Select Basic
          .form-group
            %label.col-md-4.control-label{:for => "tienda"} Tienda:
            .col-md-4
              =select_tag "tienda", options_from_collection_for_select(Store.select("sid"), :sid, :sid) , :class => "form-control"
          / Text input
          .form-group
            %label.col-md-4.control-label{:for => "start_date"} Inicio
            .col-md-4
              %input#start_date.form-control.input-md{:name => "start_date", :placeholder => "Fecha Inicio", :required => "", :type => "text"}/
          / Text input
          .form-group
            %label.col-md-4.control-label{:for => "end_date"} Fin
            .col-md-4
              %input#end_date.form-control.input-md{:name => "end_date", :placeholder => "Fecha Final", :required => "", :type => "text"}/
          / Button
          .form-group
            %label.col-md-4.control-label{:for => "submit"}
            .col-md-4
              %button#submit.btn.btn-primary{:name => "submit",  "data-disable-with" => '<i class="fa fa-spinner fa-spin""></i> Cargando...'} Buscar
      -# Render list
      = smart_listing_render :saleslinesTop

      = high_chart("some_id", @chart)
